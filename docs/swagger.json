            "properties": {
                "description": {
                    "type": "string",
                    "example": "A sample project"
                },
                "github_token": {
                    "type": "string",
                    "example": "ghp_xxxxxxxxxxxx"
                },
                "name": {
                    "type": "string",
                    "example": "My Project"
                },
                "repo_url": {
                    "type": "string",
